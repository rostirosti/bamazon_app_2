create database bamazon;

USE bamazon;

CREATE TABLE products(
  item_id INTEGER(11) AUTO_INCREMENT NOT NULL,
  product_name VARCHAR(30),
  department_name VARCHAR(30),
  price DECIMAL(12,2),
  stock_quantity INTEGER,
  PRIMARY KEY(item_id)
);

